@page
@using SpeedMeasuremetRazor.Models
@using System.Collections.Specialized
@using SpeedMeasuremetRazor.Services
@model SpeedMeasuremetRazor.Pages.Measurements.CreateSpeedMeasurementModel

@{
    ViewData["Title"] = "Create SpeedMeasurement";
}

<h2 style="glyph-orientation-horizontal">Create speedmeasurement</h2>

<form method="post">
    <div class="text-center">
        <img src="~/Images/viewfinder.JPG" width="300" height="300" />
    </div>
    <div class="form-group">
        <label>Choose a location</label>
        <select asp-for="@Model.LocationId" asp-items="@Model.Options" class="form-control">
        </select>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Press the button to take a photo" />
        <div>
            <img src="~/Images/camera-button.jpg" width="300" height="300" />
        </div>
    </div>
    <div class="@(Model.InfoText.Contains("Error") ? "alert alert-warning": "alert alert-danger")" role="alert">
        @Model.InfoText
    </div>
    
</form>
