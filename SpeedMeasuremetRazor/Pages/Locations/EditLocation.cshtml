@page
@using SpeedMeasuremetRazor.Models
@model SpeedMeasuremetRazor.Pages.Locations.EditLocationModel
@{
    ViewData["Title"] = "Update Location";
}
<h1>Update Location</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Location.Id" class="control-label"></label>
                <input asp-for="@Model.Location.Id" class="form-control" />
                <span asp-validation-for="@Model.Location.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Location.Address" class="control-label"></label>
                <input asp-for="@Model.Location.Address" class="form-control" />
                <span asp-validation-for="@Model.Location.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Zone</label>
                <select asp-for="@Model.Location.Zone" asp-items="Html.GetEnumSelectList<Zone>()" class="form-control">
                    <option value="">Vælg en zone</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Location.SpeedLimit" class="control-label"></label>
                <select asp-for="@Model.Location.SpeedLimit" class="form-control">
                    <option value="">Select a speedlimit</option>
                    <option value="50">50</option>
                    <option value="80">80</option>
                    <option value="90">90</option>
                    <option value="100">100</option>
                    <option value="110">110</option>
                    <option value="130">130</option>
                </select>

                <span asp-validation-for="@Model.Location.SpeedLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />

                <button asp-page-handler="Delete" asp-route-id="@Model.Location.Id"
                        class="btn btn-danger btn-group-lg pull-right">
                    Delete

                </button>
            </div>
            <div>
                <a asp-page="Index">Back to list</a>
            </div>
        </form>



    </div>
</div>